{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_bg_color }};
  }

  .ai-category-container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 15px;
  }

  .ai-category-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px;
  }

  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-category-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    cursor: pointer;
  }

  .ai-category-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-category-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio | times: 100 }}%;
    overflow: hidden;
  }

  .ai-category-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-category-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-title-{{ ai_gen_id }} {
    padding: {{ block.settings.title_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    background-color: {{ block.settings.title_bg_color }};
    color: {{ block.settings.title_text_color }};
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    margin: 0;
  }

  .ai-category-title-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.title_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    background: {{ block.settings.overlay_bg_color }};
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .ai-category-container-{{ ai_gen_id }} {
      padding: 0 40px;
    }

    .ai-category-desktop-slider-{{ ai_gen_id }} {
      position: relative;
    }

    .ai-category-slider-wrapper-{{ ai_gen_id }} {
      overflow: hidden;
      position: relative;
    }

    .ai-category-slider-track-{{ ai_gen_id }} {
      display: flex;
      transition: transform 0.3s ease;
      gap: {{ block.settings.grid_gap }}px;
    }

    .ai-category-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.desktop_columns | minus: 1 }} * {{ block.settings.grid_gap }}px)) / {{ block.settings.desktop_columns }});
      max-width: calc((100% - ({{ block.settings.desktop_columns | minus: 1 }} * {{ block.settings.grid_gap }}px)) / {{ block.settings.desktop_columns }});
    }

    .ai-category-arrow-{{ ai_gen_id }} {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: {{ block.settings.arrow_bg_color }};
      color: {{ block.settings.arrow_color }};
      border: none;
      width: {{ block.settings.arrow_size }}px;
      height: {{ block.settings.arrow_size }}px;
      border-radius: 50%;
      cursor: pointer;
      z-index: 10;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .ai-category-arrow-{{ ai_gen_id }}:hover {
      background-color: {{ block.settings.arrow_hover_bg_color }};
      transform: translateY(-50%) scale(1.1);
    }

    .ai-category-arrow-{{ ai_gen_id }}:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .ai-category-arrow-{{ ai_gen_id }}:disabled:hover {
      transform: translateY(-50%) scale(1);
    }

    .ai-category-arrow-prev-{{ ai_gen_id }} {
      left: 5px;
    }

    .ai-category-arrow-next-{{ ai_gen_id }} {
      right: 5px;
    }

    .ai-category-arrow-{{ ai_gen_id }} svg {
      width: 20px;
      height: 20px;
    }

    .ai-category-grid-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-desktop-slider-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<div class="ai-category-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-container-{{ ai_gen_id }}">
    {% if block.settings.section_heading != blank %}
      <h2 class="ai-category-heading-{{ ai_gen_id }}">{{ block.settings.section_heading }}</h2>
    {% endif %}

    <div class="ai-category-grid-{{ ai_gen_id }}">
      {% for i in (1..9) %}
        {% liquid
          assign show_key = 'show_category_' | append: i
          assign collection_key = 'collection_' | append: i
          assign image_key = 'custom_image_' | append: i
          assign title_key = 'custom_title_' | append: i
          
          assign show_category = block.settings[show_key]
          assign collection = block.settings[collection_key]
          assign custom_image = block.settings[image_key]
          assign custom_title = block.settings[title_key]
        %}
        
        {% if show_category %}
          {% liquid
            if custom_image != blank
              assign display_image = custom_image
            elsif collection != blank and collection.featured_image != blank
              assign display_image = collection.featured_image
            else
              assign display_image = blank
            endif
            
            if custom_title != blank
              assign display_title = custom_title
            elsif collection != blank
              assign display_title = collection.title
            else
              assign display_title = 'Category ' | append: i
            endif
            
            if collection != blank
              assign category_url = collection.url
            else
              assign category_url = '#'
            endif
          %}
          
          <div class="ai-category-item-{{ ai_gen_id }}">
            <a href="{{ category_url }}" class="ai-category-link-{{ ai_gen_id }}">
              <div class="ai-category-image-wrapper-{{ ai_gen_id }}">
                {% if display_image != blank %}
                  <img
                    src="{{ display_image | image_url: width: 600 }}"
                    alt="{{ display_title | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | round }}"
                  >
                {% else %}
                  <div class="ai-category-image-placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                
                {% if block.settings.title_overlay %}
                  <h3 class="ai-category-title-overlay-{{ ai_gen_id }}">{{ display_title }}</h3>
                {% endif %}
              </div>
              
              {% unless block.settings.title_overlay %}
                <h3 class="ai-category-title-{{ ai_gen_id }}">{{ display_title }}</h3>
              {% endunless %}
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

