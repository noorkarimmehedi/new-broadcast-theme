{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-info-table-wrapper-{{ ai_gen_id }} {
    background-color: {{ block.settings.outer_background_color }};
  }

  .ai-product-info-table-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-info-table__row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.left_column_width }}% 1fr;
    gap: {{ block.settings.column_gap }}px;
    padding: {{ block.settings.row_padding }}px 0;
  }

  .ai-product-info-table__row-{{ ai_gen_id }}:first-child {
    padding-top: 0;
  }

  .ai-product-info-table__row-{{ ai_gen_id }}:last-child {
    padding-bottom: 0;
  }

  .ai-product-info-table__label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: {{ block.settings.label_font_weight }};
    text-transform: {{ block.settings.label_text_transform }};
    letter-spacing: {{ block.settings.label_letter_spacing }}px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} {
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: {{ block.settings.content_line_height }};
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p + p {
    margin-top: 8px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-info-table-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding }}px;
      margin-left: {{ block.settings.mobile_horizontal_margin }}px;
      margin-right: {{ block.settings.mobile_horizontal_margin }}px;
    }

    .ai-product-info-table__row-{{ ai_gen_id }} {
      grid-template-columns: {{ block.settings.mobile_left_column_width }}% 1fr;
      gap: {{ block.settings.mobile_column_gap }}px;
      padding: {{ block.settings.mobile_row_padding }}px 0;
    }

    .ai-product-info-table__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_label_font_size }}px;
    }

    .ai-product-info-table__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_content_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-product-info-table-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-info-table-{{ ai_gen_id }}">
    {% if block.settings.row_1_label != blank or block.settings.row_1_content != blank %}
      <div class="ai-product-info-table__row-{{ ai_gen_id }}">
        <div class="ai-product-info-table__label-{{ ai_gen_id }}">
          {{ block.settings.row_1_label }}
        </div>
        <div class="ai-product-info-table__content-{{ ai_gen_id }}">
