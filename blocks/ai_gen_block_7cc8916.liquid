    transition: background-color 0.2s ease;
  }

  .ai-size-chart-table-{{ ai_gen_id }} tr:nth-child(even) td {
    background-color: {{ block.settings.row_alternate_color }};
  }

  .ai-size-chart-table-{{ ai_gen_id }} tr:hover td {
    background-color: {{ block.settings.row_hover_color }};
  }

  .ai-size-chart-table-{{ ai_gen_id }} tr:last-child td {
    border-bottom: none;
  }

  .ai-size-chart-note-{{ ai_gen_id }} {
    margin: {{ block.settings.note_spacing }}px 0 0;
    padding: {{ block.settings.note_padding }}px;
    background: {{ block.settings.note_background }};
    border: {{ block.settings.note_border_width }}px solid {{ block.settings.note_border_color }};
    border-radius: {{ block.settings.note_border_radius }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ai-size-chart-note-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: {{ block.settings.note_accent_height }}px;
    background: {{ block.settings.note_accent_color }};
  }

  .ai-size-chart-note-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.note_icon_spacing }}px;
    font-size: {{ block.settings.note_text_size }}px;
    color: {{ block.settings.note_text_color }};
    line-height: 1.4;
  }

  .ai-size-chart-note-icon-{{ ai_gen_id }} {
    width: {{ block.settings.note_icon_size }}px;
    height: {{ block.settings.note_icon_size }}px;
    background: {{ block.settings.note_icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.note_icon_color }};
    font-size: {{ block.settings.note_icon_size | times: 0.6 }}px;
    font-weight: bold;
    flex-shrink: 0;
  }

  .ai-size-chart-note-text-{{ ai_gen_id }} {
