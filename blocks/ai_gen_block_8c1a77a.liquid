{% style %}
  .ai-category-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-category-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-category-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-category-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-category-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: block;
  }

  .ai-category-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }

  .ai-category-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-category-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-category-item-{{ ai_gen_id }}:hover .ai-category-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-category-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: {{ block.settings.overlay_gradient }};
    transition: background 0.3s ease;
  }

  .ai-category-item-{{ ai_gen_id }}:hover .ai-category-overlay-{{ ai_gen_id }} {
    background: {{ block.settings.overlay_hover_gradient }};
  }

  .ai-category-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_name_size }}px;
    color: {{ block.settings.category_name_color }};
    margin: 0 0 4px;
    font-weight: 600;
  }

  .ai-category-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_count_size }}px;
    color: {{ block.settings.category_count_color }};
    margin: 0;
    opacity: 0.9;
  }

  .ai-category-arrow-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .ai-category-slider-wrapper-{{ ai_gen_id }} {
      position: relative;
      padding: 0 70px;
    }

    .ai-category-grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: scroll;
      overflow-y: hidden;
      scroll-behavior: smooth;
      gap: {{ block.settings.grid_gap }}px;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .ai-category-grid-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-category-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.desktop_columns | minus: 1 }} * {{ block.settings.grid_gap }}px)) / {{ block.settings.desktop_columns }});
      min-width: calc((100% - ({{ block.settings.desktop_columns | minus: 1 }} * {{ block.settings.grid_gap }}px)) / {{ block.settings.desktop_columns }});
    }

    .ai-category-arrow-{{ ai_gen_id }} {
      display: flex;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: {{ block.settings.arrow_bg_color }};
      border: none;
      cursor: pointer;
      align-items: center;
      justify-content: center;
      z-index: 100;
      transition: all 0.3s ease;
      opacity: 1;
    }

    .ai-category-arrow-{{ ai_gen_id }}:hover {
      background-color: {{ block.settings.arrow_hover_bg_color }};
      transform: translateY(-50%) scale(1.1);
    }

    .ai-category-arrow-{{ ai_gen_id }}:hover svg {
      stroke: {{ block.settings.arrow_hover_color }};
    }

    .ai-category-arrow-{{ ai_gen_id }}:disabled {
      opacity: 0.4;
      cursor: not-allowed;
      transform: translateY(-50%) scale(1);
    }

    .ai-category-arrow-{{ ai_gen_id }}--prev {
      left: 5px;
    }

    .ai-category-arrow-{{ ai_gen_id }}--next {
      right: 5px;
    }

    .ai-category-arrow-{{ ai_gen_id }} svg {
      width: 26px;
      height: 26px;
      stroke: {{ block.settings.arrow_color }};
      stroke-width: 2.5;
      fill: none;
      transition: stroke 0.3s ease;
    }

    .ai-category-title-{{ ai_gen_id }} {
