<category-slider-{{ ai_gen_id }} class="ai-category-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-category-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-category-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-category-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-category-slider-wrapper-{{ ai_gen_id }}">
      <button
        type="button"
        class="ai-category-arrow-{{ ai_gen_id }} ai-category-arrow-{{ ai_gen_id }}--prev"
        aria-label="Previous categories"
      >
        <svg viewBox="0 0 24 24">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-category-grid-{{ ai_gen_id }}">
        {% for i in (1..9) %}
          {% liquid
            assign collection_key = 'category_' | append: i
            assign custom_image_key = 'category_' | append: i | append: '_image'
            assign custom_title_key = 'category_' | append: i | append: '_title'
            assign category = block.settings[collection_key]
            assign custom_image = block.settings[custom_image_key]
            assign custom_title = block.settings[custom_title_key]
          %}

          {% if category != blank %}
            <a href="{{ category.url }}" class="ai-category-item-{{ ai_gen_id }}">
              <div class="ai-category-image-wrapper-{{ ai_gen_id }}">
                {% if custom_image %}
                  <img
                    src="{{ custom_image | image_url: width: 600 }}"
                    alt="{{ category.title | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% elsif category.image %}
                  <img
                    src="{{ category.image | image_url: width: 600 }}"
                    alt="{{ category.title | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% elsif category.products.first and category.products.first.featured_image %}
                  <img
                    src="{{ category.products.first.featured_image | image_url: width: 600 }}"
                    alt="{{ category.title | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% else %}
                  <div class="ai-category-placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-category-overlay-{{ ai_gen_id }}">
                  <h3 class="ai-category-name-{{ ai_gen_id }}">
                    {% if custom_title != blank %}
                      {{ custom_title }}
                    {% else %}
                      {{ category.title }}
                    {% endif %}
                  </h3>
                  <p class="ai-category-count-{{ ai_gen_id }}">{{ category.products_count }} {% if category.products_count == 1 %}item{% else %}items{% endif %}</p>
                </div>
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>

      <button
        type="button"
        class="ai-category-arrow-{{ ai_gen_id }} ai-category-arrow-{{ ai_gen_id }}--next"
        aria-label="Next categories"
      >
        <svg viewBox="0 0 24 24">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</category-slider-{{ ai_gen_id }}>

<script>
  (function() {
    if (customElements.get('category-slider-{{ ai_gen_id }}')) {
      return;
    }

    class CategorySlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        if (window.innerWidth < 750) {
          return;
        }

        this.slider = this.querySelector('.ai-category-grid-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-category-arrow-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-category-arrow-{{ ai_gen_id }}--next');
        this.gap = {{ block.settings.grid_gap }};
        this.columns = {{ block.settings.desktop_columns }};

        if (!this.slider || !this.prevButton || !this.nextButton) {
          return;
        }

        this.bindEvents();
        this.updateButtons();
      }

      bindEvents() {
        this.prevButton.addEventListener('click', () => {
          this.scrollSlider('prev');
        });

        this.nextButton.addEventListener('click', () => {
          this.scrollSlider('next');
        });

        this.slider.addEventListener('scroll', () => {
          this.updateButtons();
        });
      }

      scrollSlider(direction) {
        const items = this.slider.querySelectorAll('.ai-category-item-{{ ai_gen_id }}');
        if (items.length === 0) return;

        const itemWidth = items[0].getBoundingClientRect().width;
        const scrollAmount = (itemWidth + this.gap) * this.columns;

        if (direction === 'prev') {
          this.slider.scrollLeft -= scrollAmount;
        } else {
          this.slider.scrollLeft += scrollAmount;
        }
      }

      updateButtons() {
        const maxScroll = this.slider.scrollWidth - this.slider.clientWidth;
        
        if (this.slider.scrollLeft <= 5) {
          this.prevButton.disabled = true;
        } else {
          this.prevButton.disabled = false;
        }

        if (this.slider.scrollLeft >= maxScroll - 5) {
          this.nextButton.disabled = true;
        } else {
          this.nextButton.disabled = false;
        }
      }
    }

    customElements.define('category-slider-{{ ai_gen_id }}', CategorySlider{{ ai_gen_id }});
  })();
</script>

