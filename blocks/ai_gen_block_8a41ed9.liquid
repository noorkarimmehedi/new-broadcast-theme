{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-info-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
  }

  .ai-contact-info__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing }}px;
    font-weight: 600;
  }

  .ai-contact-info__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.spacing }}px;
    line-height: 1.6;
  }

  .ai-contact-info__methods-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    gap: {{ block.settings.item_spacing }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-contact-info__method-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: border-color 0.2s ease;
    flex: 1;
    text-align: center;
  }

  .ai-contact-info__method-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.border_hover_color }};
  }

  .ai-contact-info__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-contact-info__icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-contact-info__details-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-contact-info__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    font-weight: 600;
    margin: 0 0 4px;
  }

  .ai-contact-info__link-{{ ai_gen_id }} {
    font-size: {{ block.settings.link_size }}px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    word-break: break-word;
  }

  .ai-contact-info__link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-info__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-contact-info__methods-{{ ai_gen_id }} {
      flex-direction: column;
    }
  }
{% endstyle %}

<div class="ai-contact-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-contact-info__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="ai-contact-info__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
  {% endif %}

  <div class="ai-contact-info__methods-{{ ai_gen_id }}">
    {% if block.settings.show_facebook %}
      <div class="ai-contact-info__method-{{ ai_gen_id }}">
        <div class="ai-contact-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </div>
        <div class="ai-contact-info__details-{{ ai_gen_id }}">
          <div class="ai-contact-info__label-{{ ai_gen_id }}">{{ block.settings.facebook_label }}</div>
          <a href="{{ block.settings.facebook_url }}" class="ai-contact-info__link-{{ ai_gen_id }}" target="_blank" rel="noopener">{{ block.settings.facebook_display }}</a>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_phone %}
      <div class="ai-contact-info__method-{{ ai_gen_id }}">
        <div class="ai-contact-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="ai-contact-info__details-{{ ai_gen_id }}">
          <div class="ai-contact-info__label-{{ ai_gen_id }}">{{ block.settings.phone_label }}</div>
          <a href="tel:{{ block.settings.phone_number }}" class="ai-contact-info__link-{{ ai_gen_id }}">{{ block.settings.phone_number }}</a>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_whatsapp %}
      <div class="ai-contact-info__method-{{ ai_gen_id }}">
        <div class="ai-contact-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </div>
        <div class="ai-contact-info__details-{{ ai_gen_id }}">
          <div class="ai-contact-info__label-{{ ai_gen_id }}">{{ block.settings.whatsapp_label }}</div>
          <a href="https://wa.me/{{ block.settings.whatsapp_number | replace: '+', '' | replace: ' ', '' }}" class="ai-contact-info__link-{{ ai_gen_id }}" target="_blank" rel="noopener">{{ block.settings.whatsapp_number }}</a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

