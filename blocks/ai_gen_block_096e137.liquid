<div class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-grid-container-{{ ai_gen_id }}">
    <div class="ai-product-grid-header-{{ ai_gen_id }}">
      <h2 class="ai-product-grid-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% if block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-product-grid-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% elsif block.settings.collection != blank %}
        <a href="{{ block.settings.collection.url }}" class="ai-product-grid-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-product-grid-items-{{ ai_gen_id }}">
      {% if block.settings.collection != blank %}
        {% for product in block.settings.collection.products limit: 4 %}
          <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
            <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | times: block.settings.image_aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-product-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-product-info-{{ ai_gen_id }}">
              <h3 class="ai-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
              <p class="ai-product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
            </div>
          </a>
        {% endfor %}
      {% else %}
        {% for i in (1..4) %}
          <div class="ai-product-card-{{ ai_gen_id }}">
            <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
              <div class="ai-product-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-product-info-{{ ai_gen_id }}">
              <h3 class="ai-product-name-{{ ai_gen_id }}">Product {{ i }}</h3>
              <p class="ai-product-price-{{ ai_gen_id }}">$0.00</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if block.settings.show_bottom_button %}
      <div class="ai-product-grid-bottom-{{ ai_gen_id }}">
        {% if block.settings.bottom_button_link != blank %}
          <a href="{{ block.settings.bottom_button_link }}" class="ai-product-grid-bottom-button-{{ ai_gen_id }}">
            {{ block.settings.bottom_button_text }}
          </a>
        {% elsif block.settings.collection != blank %}
          <a href="{{ block.settings.collection.url }}" class="ai-product-grid-bottom-button-{{ ai_gen_id }}">
            {{ block.settings.bottom_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

