        <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
      </svg>
    </button>
  </div>
</div>

<script>
(function() {
  const slideshowId = '{{ ai_gen_id }}';
  const container = document.querySelector('[data-slideshow-id="' + slideshowId + '"]');
  const dots = document.querySelectorAll('.ai-hero-dot-' + slideshowId);
  const prevBtn = document.querySelector('.ai-hero-arrow-prev-' + slideshowId);
  const nextBtn = document.querySelector('.ai-hero-arrow-next-' + slideshowId);
  
  let currentSlide = 0;
  const totalSlides = 3;
  let startX = 0;
  let startY = 0;
  let currentX = 0;
  let currentY = 0;
  let isDragging = false;
  let startTransform = 0;
  let isHorizontalSwipe = false;

  function goToSlide(index) {
    currentSlide = index;
    container.style.transform = 'translateX(-' + (currentSlide * 100) + '%)';
    
    dots.forEach((dot, i) => {
      if (i === currentSlide) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    goToSlide(currentSlide);
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    goToSlide(currentSlide);
  }

  // Touch/Swipe Events
  function handleTouchStart(e) {
    startX = e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
    startY = e.type.includes('mouse') ? e.pageY : e.touches[0].clientY;
    startTransform = currentSlide * 100;
    isDragging = true;
    isHorizontalSwipe = false;
  }

  function handleTouchMove(e) {
    if (!isDragging) return;
    
    currentX = e.type.includes('mouse') ? e.pageX : e.touches[0].clientX;
    currentY = e.type.includes('mouse') ? e.pageY : e.touches[0].clientY;
    
    const diffX = Math.abs(startX - currentX);
    const diffY = Math.abs(startY - currentY);
    
    // Determine if it's a horizontal or vertical swipe
    if (!isHorizontalSwipe && diffX > 10 && diffX > diffY) {
      isHorizontalSwipe = true;
      container.style.transition = 'none';
    }
    
    // Only prevent scrolling and handle swipe if it's horizontal
    if (isHorizontalSwipe) {
      e.preventDefault();
      const diff = startX - currentX;
      const containerWidth = container.offsetWidth;
      const percentageMoved = (diff / containerWidth) * 100;
      
      const newTransform = startTransform + percentageMoved;
      container.style.transform = 'translateX(-' + newTransform + '%)';
    }
  }

  function handleTouchEnd(e) {
    if (!isDragging) return;
    
    isDragging = false;
    container.style.transition = 'transform 0.5s ease-in-out';
    
    // Only change slide if it was a horizontal swipe
    if (isHorizontalSwipe) {
      const diff = startX - currentX;
      const threshold = 50; // minimum swipe distance
      
      if (Math.abs(diff) > threshold) {
        if (diff > 0) {
          // Swiped left - go to next slide
          nextSlide();
        } else {
          // Swiped right - go to previous slide
          prevSlide();
        }
      } else {
        // Return to current slide
        goToSlide(currentSlide);
      }
    } else {
      // Return to current slide if not horizontal swipe
      goToSlide(currentSlide);
    }
    
    isHorizontalSwipe = false;
  }

  // Touch events for mobile
  container.addEventListener('touchstart', handleTouchStart, { passive: true });
  container.addEventListener('touchmove', handleTouchMove, { passive: false });
  container.addEventListener('touchend', handleTouchEnd);

  // Dot and Arrow Controls
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => goToSlide(index));
  });

  if (prevBtn) prevBtn.addEventListener('click', prevSlide);
  if (nextBtn) nextBtn.addEventListener('click', nextSlide);

  // Auto-play (optional)
  {% if block.settings.autoplay %}
  let autoplayInterval = setInterval(nextSlide, {{ block.settings.autoplay_speed | times: 1000 }});
  
  // Pause autoplay on interaction
  container.addEventListener('touchstart', function() {
    clearInterval(autoplayInterval);
  });
  
  container.addEventListener('touchend', function() {
    autoplayInterval = setInterval(nextSlide, {{ block.settings.autoplay_speed | times: 1000 }});
  });
  {% endif %}
})();
</script>

