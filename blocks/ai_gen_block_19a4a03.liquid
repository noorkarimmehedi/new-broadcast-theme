<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-slideshow-{{ ai_gen_id }}">
    <div class="ai-hero-slides-container-{{ ai_gen_id }}" data-slideshow-id="{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% assign slide_index = i %}
        {% assign mobile_image_key = 'slide_' | append: i | append: '_image_mobile' %}
        {% assign desktop_image_key = 'slide_' | append: i | append: '_image_desktop' %}
        {% assign heading_key = 'slide_' | append: i | append: '_heading' %}
        {% assign subheading_key = 'slide_' | append: i | append: '_subheading' %}
        {% assign button1_label_key = 'slide_' | append: i | append: '_button1_label' %}
        {% assign button1_link_key = 'slide_' | append: i | append: '_button1_link' %}
        {% assign button2_label_key = 'slide_' | append: i | append: '_button2_label' %}
        {% assign button2_link_key = 'slide_' | append: i | append: '_button2_link' %}

        <div class="ai-hero-slide-{{ ai_gen_id }}">
          {% if block.settings[mobile_image_key] %}
            <img
              src="{{ block.settings[mobile_image_key] | image_url: width: 1000 }}"
              alt="{{ block.settings[mobile_image_key].alt | escape }}"
              loading="lazy"
              class="ai-hero-slide-image-{{ ai_gen_id }} ai-hero-image-mobile-{{ ai_gen_id }}"
            >
          {% endif %}
          {% if block.settings[desktop_image_key] %}
            <img
              src="{{ block.settings[desktop_image_key] | image_url: width: 2000 }}"
              alt="{{ block.settings[desktop_image_key].alt | escape }}"
              loading="lazy"
              class="ai-hero-slide-image-{{ ai_gen_id }} ai-hero-image-desktop-{{ ai_gen_id }}"
            >
          {% endif %}

          <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

          <div class="ai-hero-content-{{ ai_gen_id }}">
            <div class="ai-hero-text-wrapper-{{ ai_gen_id }}">
              {% if block.settings[heading_key] != blank %}
                <h2 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings[heading_key] }}</h2>
              {% endif %}

              {% if block.settings[subheading_key] != blank %}
                <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings[subheading_key] }}</div>
              {% endif %}
            </div>

            <div class="ai-hero-buttons-{{ ai_gen_id }}">
              {% if block.settings[button1_label_key] != blank %}
                <a
                  href="{{ block.settings[button1_link_key] }}"
                  class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
                >
                  {{ block.settings[button1_label_key] }}
                </a>
              {% endif %}

              {% if block.settings[button2_label_key] != blank %}
                <a
                  href="{{ block.settings[button2_link_key] }}"
                  class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
                >
                  {{ block.settings[button2_label_key] }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="ai-hero-controls-{{ ai_gen_id }}">
    <button class="ai-hero-arrow-{{ ai_gen_id }} ai-hero-arrow-prev-{{ ai_gen_id }}" data-slideshow-id="{{ ai_gen_id }}" data-direction="prev">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>

    <div class="ai-hero-dots-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        <button 
          class="ai-hero-dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}" 
          data-slideshow-id="{{ ai_gen_id }}" 
          data-slide="{{ forloop.index0 }}"
        ></button>
      {% endfor %}
    </div>

    <button class="ai-hero-arrow-{{ ai_gen_id }} ai-hero-arrow-next-{{ ai_gen_id }}" data-slideshow-id="{{ ai_gen_id }}" data-direction="next">
