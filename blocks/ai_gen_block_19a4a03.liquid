{% doc %}
  @prompt
    generate me a hero section with slideshow - three slides visible, navigation dots below slides, on mobile version arrow keys on both left and right side alongside dots
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-hero-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.height_mobile }}px;
  }

  .ai-hero-slides-container-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-hero-slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: flex-end;
  }

  .ai-hero-slide-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-image-desktop-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: {{ block.settings.content_padding_mobile }}px {{ block.settings.button_side_gap_mobile }}px;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
    align-items: {{ block.settings.content_alignment_mobile }};
  }

  .ai-hero-text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
    text-align: {{ block.settings.text_alignment_mobile }};
    width: 100%;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size_mobile }}px;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.subheading_size_mobile }}px;
    color: {{ block.settings.subheading_color }};
    line-height: 1.4;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.button_spacing }}px;
    width: 100%;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal_mobile }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    text-align: center;
    width: 100%;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_color }};
    border-color: {{ block.settings.button_primary_bg }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    color: {{ block.settings.button_primary_hover_color }};
    border-color: {{ block.settings.button_primary_hover_bg }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_color }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    color: {{ block.settings.button_secondary_hover_color }};
    border-color: {{ block.settings.button_secondary_hover_border }};
  }

  /* Navigation Controls */
  .ai-hero-controls-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30px 40px;
    background-color: #F5F5F5;
    border-top: 1px solid #E5E5E5;
  }

  .ai-hero-arrow-{{ ai_gen_id }} {
    background-color: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
    flex-shrink: 0;
    padding: 0;
  }

  .ai-hero-arrow-{{ ai_gen_id }}:hover {
    opacity: 0.6;
  }

  .ai-hero-arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    fill: #000;
    stroke: #000;
    stroke-width: 2;
  }

  .ai-hero-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    align-items: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .ai-hero-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: transparent;
    border: 2px solid #000;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .ai-hero-dot-{{ ai_gen_id }}.active {
    background-color: #000;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.height_desktop }}px;
    }

    .ai-hero-image-mobile-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-image-desktop-{{ ai_gen_id }} {
      display: block;
    }

    .ai-hero-text-wrapper-{{ ai_gen_id }} {
      text-align: {{ block.settings.text_alignment_desktop }};
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding_desktop }}px;
      align-items: {{ block.settings.content_alignment_desktop }};
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: row;
      width: auto;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal_desktop }}px;
      width: auto;
    }

    .ai-hero-controls-{{ ai_gen_id }} {
      gap: 0;
      padding: 30px 60px;
    }

    .ai-hero-arrow-{{ ai_gen_id }} {
      display: flex;
    }
  }
