{% doc %}
  @prompt
    generate me a section for these with icons: Free and easy returns
    Delivery within 48 hours
    Export fabric. in mobile version the three should be in same one row , don't like the icons, option for custom icon upload and select icons from shopify. also add a black border , add border radius option also on mobile version border left and right side width should be customizable , on mobile version the border is clashing on left and right side. i want slight gap on both left and right side on mobile version
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-features-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-features-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-features-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-features-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-features-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-features-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-features-{{ ai_gen_id }} {
      border-left-width: {{ block.settings.border_left_width_mobile }}px;
      border-right-width: {{ block.settings.border_right_width_mobile }}px;
      margin-left: {{ block.settings.mobile_side_gap }}px;
      margin-right: {{ block.settings.mobile_side_gap }}px;
    }

    .ai-features-container-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-features-item-{{ ai_gen_id }} {
      gap: {{ block.settings.icon_text_gap_mobile }}px;
    }

    .ai-features-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }

    .ai-features-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-container-{{ ai_gen_id }}">
    <div class="ai-features-item-{{ ai_gen_id }}">
      <div class="ai-features-icon-{{ ai_gen_id }}">
        {% if block.settings.feature_1_custom_icon %}
          <img src="{{ block.settings.feature_1_custom_icon | image_url: width: 100 }}" alt="" loading="lazy">
        {% else %}
          {% case block.settings.feature_1_icon %}
            {% when 'checkmark' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% when 'box' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 11 12 14 22 4"></polyline>
                <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
              </svg>
            {% when 'return' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 14 4 9 9 4"></polyline>
                <path d="M20 20v-7a4 4 0 0 0-4-4H4"></path>
              </svg>
            {% when 'refresh' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="23 4 23 10 17 10"></polyline>
                <polyline points="1 20 1 14 7 14"></polyline>
                <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
              </svg>
          {% endcase %}
        {% endif %}
      </div>
      <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</p>
    </div>

    <div class="ai-features-item-{{ ai_gen_id }}">
      <div class="ai-features-icon-{{ ai_gen_id }}">
        {% if block.settings.feature_2_custom_icon %}
          <img src="{{ block.settings.feature_2_custom_icon | image_url: width: 100 }}" alt="" loading="lazy">
        {% else %}
          {% case block.settings.feature_2_icon %}
            {% when 'clock' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            {% when 'truck' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <rect x="1" y="3" width="15" height="13"></rect>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
              </svg>
            {% when 'package' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                <line x1="12" y1="22.08" x2="12" y2="12"></line>
              </svg>
            {% when 'zap' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
          {% endcase %}
        {% endif %}
      </div>
      <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</p>
    </div>

    <div class="ai-features-item-{{ ai_gen_id }}">
      <div class="ai-features-icon-{{ ai_gen_id }}">
        {% if block.settings.feature_3_custom_icon %}
          <img src="{{ block.settings.feature_3_custom_icon | image_url: width: 100 }}" alt="" loading="lazy">
        {% else %}
          {% case block.settings.feature_3_icon %}
            {% when 'tag' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                <line x1="7" y1="7" x2="7.01" y2="7"></line>
              </svg>
            {% when 'award' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="8" r="7"></circle>
                <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
              </svg>
            {% when 'star' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            {% when 'layers' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
          {% endcase %}
        {% endif %}
      </div>
      <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_3_text }}</p>
    </div>
  </div>
</div>

