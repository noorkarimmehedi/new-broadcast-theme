{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-categories-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 25px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-categories__heading-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
  }

  .ai-featured-categories__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-featured-categories__card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    aspect-ratio: {{ block.settings.card_aspect_ratio }};
    display: flex;
    align-items: flex-end;
    justify-content: center;
    text-decoration: none;
  }

  .ai-featured-categories__image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-featured-categories__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-categories__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-categories__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-categories__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, {{ block.settings.overlay_color }}, transparent);
    height: {{ block.settings.overlay_height }}%;
    pointer-events: none;
  }

  .ai-featured-categories__label-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    padding: {{ block.settings.label_padding }}px;
    font-size: {{ block.settings.label_size }}px;
    font-weight: 700;
    letter-spacing: {{ block.settings.label_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ block.settings.label_color }};
    text-align: center;
    margin: 0;
    font-family: {{ block.settings.label_font.family }}, {{ block.settings.label_font.fallback_families }};
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  @media screen and (max-width: 989px) {
    .ai-featured-categories-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    }

    .ai-featured-categories__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
    }

    .ai-featured-categories__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-featured-categories__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-featured-categories-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-featured-categories__heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  <div class="ai-featured-categories__grid-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% liquid
        assign collection_key = 'collection_' | append: i
        assign label_key = 'label_' | append: i
        assign image_key = 'image_' | append: i
        assign collection = block.settings[collection_key]
        assign label = block.settings[label_key]
        assign custom_image = block.settings[image_key]
      %}

      {% if collection != blank or custom_image != blank %}
        <a 
          href="{{ collection.url | default: '#' }}" 
          class="ai-featured-categories__card-{{ ai_gen_id }}"
          aria-label="{{ label | default: collection.title }}"
        >
          <div class="ai-featured-categories__image-wrapper-{{ ai_gen_id }}">
            {% if custom_image %}
              <img
                src="{{ custom_image | image_url: width: 800 }}"
                alt="{{ custom_image.alt | default: label | escape }}"
                class="ai-featured-categories__image-{{ ai_gen_id }}"
                loading="lazy"
                width="800"
                height="{{ 800 | divided_by: block.settings.card_aspect_ratio | round }}"
              >
            {% elsif collection.featured_image %}
              <img
                src="{{ collection.featured_image | image_url: width: 800 }}"
                alt="{{ collection.featured_image.alt | default: collection.title | escape }}"
                class="ai-featured-categories__image-{{ ai_gen_id }}"
                loading="lazy"
                width="800"
                height="{{ 800 | divided_by: block.settings.card_aspect_ratio | round }}"
              >
            {% else %}
              <div class="ai-featured-categories__placeholder-{{ ai_gen_id }}">
                {{ 'collection-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          {% if block.settings.show_overlay %}
            <div class="ai-featured-categories__overlay-{{ ai_gen_id }}"></div>
          {% endif %}

          <h3 class="ai-featured-categories__label-{{ ai_gen_id }}">
            {{ label | default: collection.title }}
          </h3>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

