<product-tabs-{{ ai_gen_id }} class="ai-product-tabs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-tabs-container-{{ ai_gen_id }}">
    <div class="ai-product-tabs-header-{{ ai_gen_id }}">
      <h2 class="ai-product-tabs-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% if block.settings.discover_link != blank %}
        <a href="{{ block.settings.discover_link }}" class="ai-product-tabs-discover-{{ ai_gen_id }}">
          {{ block.settings.discover_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-product-tabs-nav-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign tab_enabled_key = 'tab_' | append: i | append: '_enabled'
          assign tab_title_key = 'tab_' | append: i | append: '_title'
          assign tab_enabled = block.settings[tab_enabled_key]
          assign tab_title = block.settings[tab_title_key]
        %}
        {% if tab_enabled and tab_title != blank %}
          <button
            class="ai-product-tabs-tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-tab="{{ i }}"
          >
            {{ tab_title }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    {% for i in (1..4) %}
      {% liquid
        assign tab_enabled_key = 'tab_' | append: i | append: '_enabled'
        assign tab_collection_key = 'tab_' | append: i | append: '_collection'
        assign tab_button_text_key = 'tab_' | append: i | append: '_button_text'
        assign tab_button_link_key = 'tab_' | append: i | append: '_button_link'
        assign tab_enabled = block.settings[tab_enabled_key]
        assign tab_collection = block.settings[tab_collection_key]
        assign tab_button_text = block.settings[tab_button_text_key]
        assign tab_button_link = block.settings[tab_button_link_key]
      %}
      {% if tab_enabled %}
        <div
          class="ai-product-tabs-content-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-content="{{ i }}"
        >
          {% if tab_collection != blank and tab_collection.products.size > 0 %}
            <div class="ai-product-tabs-grid-{{ ai_gen_id }}">
              {% for product in tab_collection.products limit: block.settings.products_per_tab %}
                <a href="{{ product.url }}" class="ai-product-tabs-card-{{ ai_gen_id }}">
                  <div class="ai-product-tabs-image-wrapper-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        class="ai-product-tabs-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="600"
                        height="{{ 600 | times: block.settings.image_aspect_ratio }}"
                      >
                    {% else %}
                      <div class="ai-product-tabs-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="ai-product-tabs-info-{{ ai_gen_id }}">
                    <h3 class="ai-product-tabs-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                    <div class="ai-product-tabs-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                  </div>
                </a>
              {% endfor %}
            </div>
            {% if tab_button_text != blank and tab_button_link != blank %}
              <div class="ai-product-tabs-bottom-button-wrapper-{{ ai_gen_id }}">
                <a href="{{ tab_button_link }}" class="ai-product-tabs-bottom-button-{{ ai_gen_id }}">
                  {{ tab_button_text }}
                </a>
              </div>
            {% endif %}
          {% else %}
            <div class="ai-product-tabs-empty-{{ ai_gen_id }}">
              Select a collection for this tab to display products
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</product-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-product-tabs-tab-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-product-tabs-content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          if (tab.getAttribute('data-tab') === tabId) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.contents.forEach((content) => {
          if (content.getAttribute('data-content') === tabId) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });
      }
    }

    customElements.define('product-tabs-{{ ai_gen_id }}', ProductTabs{{ ai_gen_id }});
  })();
</script>

