<div class="ai-latest-drop-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-latest-drop-container-{{ ai_gen_id }}">
    <div class="ai-latest-drop-header-{{ ai_gen_id }}">
      {% if block.settings.section_title != blank %}
        <h2 class="ai-latest-drop-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% endif %}
      {% if block.settings.button_text != blank %}
        {% if block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-latest-drop-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% elsif block.settings.collection != blank %}
          <a href="{{ block.settings.collection.url }}" class="ai-latest-drop-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      {% endif %}
    </div>

    <div class="ai-latest-drop-grid-{{ ai_gen_id }}">
      {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
        {% for product in block.settings.collection.products limit: 4 %}
          <div class="ai-latest-drop-card-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-latest-drop-card-link-{{ ai_gen_id }}">
              <div class="ai-latest-drop-card-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 800 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-latest-drop-card-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | divided_by: product.featured_image.aspect_ratio | round }}"
                  >
                {% else %}
                  <div class="ai-latest-drop-card-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-latest-drop-card-content-{{ ai_gen_id }}">
                <h3 class="ai-latest-drop-card-name-{{ ai_gen_id }}">
                  {{ product.title }}
                </h3>
                {% if product.description != blank and block.settings.show_description %}
                  <p class="ai-latest-drop-card-description-{{ ai_gen_id }}">
                    {{ product.description | strip_html | truncate: 80 }}
                  </p>
                {% endif %}
                <p class="ai-latest-drop-card-price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                </p>
              </div>
            </a>
          </div>
        {% endfor %}
      {% else %}
        <div class="ai-latest-drop-empty-state-{{ ai_gen_id }}">
          Select a collection to display products
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_footer_button and block.settings.footer_button_text != blank %}
      <div class="ai-latest-drop-footer-{{ ai_gen_id }}">
        {% if block.settings.footer_button_link != blank %}
          <a href="{{ block.settings.footer_button_link }}" class="ai-latest-drop-footer-button-{{ ai_gen_id }}">
            {{ block.settings.footer_button_text }}
          </a>
        {% elsif block.settings.collection != blank %}
          <a href="{{ block.settings.collection.url }}" class="ai-latest-drop-footer-button-{{ ai_gen_id }}">
            {{ block.settings.footer_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

