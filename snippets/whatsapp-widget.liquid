<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Montserrat:wght@300;400;500&display=swap');

  /* Luxury Chat Widget Styles */
  .luxury-chat-widget {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 9999;
    font-family: 'Montserrat', sans-serif;
  }

  /* Floating Button */
  .luxury-float-button {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .luxury-float-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .luxury-float-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .luxury-float-button:hover::before {
    opacity: 1;
  }

  .luxury-float-button.active {
    background: linear-gradient(135deg, #000000 0%, #000000 100%);
  }

  .luxury-float-button .icon {
    position: absolute;
    width: 28px;
    height: 28px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .luxury-float-button .chat-icon {
    fill: #ffffff;
    stroke: none;
    transform: rotate(0deg) scale(1);
    opacity: 1;
  }

  .luxury-float-button.active .chat-icon {
    transform: rotate(90deg) scale(0);
    opacity: 0;
  }

  .luxury-float-button .close-icon {
    stroke: #ffffff;
    stroke-width: 1.5;
    transform: rotate(-90deg) scale(0);
    opacity: 0;
  }

  .luxury-float-button.active .close-icon {
    transform: rotate(0deg) scale(1);
    opacity: 1;
  }

  /* Chat Container */
  .luxury-chat-container {
    position: absolute;
    bottom: 90px;
    right: 0;
    width: 380px;
    background: #ffffff;
    border-radius: 2px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: scale(0.95) translateY(10px);
    transform-origin: bottom right;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .luxury-chat-container.active {
    opacity: 1;
    transform: scale(1) translateY(0);
    pointer-events: all;
  }

  /* Header */
  .luxury-chat-header {
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    padding: 32px 28px;
    color: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .luxury-chat-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
    pointer-events: none;
  }

  .luxury-chat-header h3 {
    margin: 0 0 12px 0;
    font-size: 22px;
    font-weight: 300;
    color: #ffffff;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: 0.5px;
    position: relative;
  }

  .luxury-chat-header p {
    margin: 0;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.7);
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 300;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    position: relative;
  }

  .status-indicator {
    width: 6px;
    height: 6px;
    background: #ffffff;
    border-radius: 50%;
    display: inline-block;
    flex-shrink: 0;
    animation: luxuryPulse 2s ease-in-out infinite;
  }

  @keyframes luxuryPulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }

  /* Body */
  .luxury-chat-body {
    padding: 0;
    background: #ffffff;
  }

  /* Divider */
  .luxury-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(0, 0, 0, 0.1) 50%, transparent 100%);
    margin: 0;
  }

  /* Footer */
  .luxury-chat-footer {
    padding: 32px 28px;
    background: #ffffff;
  }

  .luxury-subtitle {
    font-size: 11px;
    color: #666666;
    margin: 0 0 20px 0;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-align: center;
  }

  .chat-buttons-container {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .luxury-button {
    width: 100%;
    border: 1px solid #000000;
    padding: 16px 24px;
    border-radius: 0;
    font-size: 13px;
    font-weight: 400;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    box-sizing: border-box;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    font-family: 'Montserrat', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .luxury-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #000000;
    transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
  }

  .luxury-button:hover::before {
    left: 0;
  }

  .luxury-button span,
  .luxury-button svg {
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .whatsapp-button {
    background: #000000;
    color: #ffffff;
    border-color: #000000;
  }

  .whatsapp-button::before {
    background: #1a1a1a;
  }

  .whatsapp-button:hover {
    border-color: #1a1a1a;
  }

  .whatsapp-button svg {
    width: 18px;
    height: 18px;
    fill: #ffffff;
  }

  .messenger-button {
    background: transparent;
    color: #000000;
    border-color: #000000;
  }

  .messenger-button:hover {
    color: #ffffff;
  }

  .messenger-button svg {
    width: 18px;
    height: 18px;
    transition: all 0.3s ease;
  }

  .messenger-button:hover svg path {
    fill: #ffffff;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .luxury-chat-widget {
      bottom: 20px;
      right: 20px;
    }

    .luxury-chat-container {
      width: calc(100vw - 40px);
      max-width: 380px;
    }

    .luxury-float-button {
      width: 56px;
      height: 56px;
    }

    .luxury-float-button .icon {
      width: 24px;
      height: 24px;
    }

    .luxury-chat-header {
      padding: 28px 24px;
    }

    .luxury-chat-header h3 {
      font-size: 20px;
    }

    .luxury-chat-footer {
      padding: 28px 24px;
    }
  }

  @media screen and (max-width: 420px) {
    .luxury-chat-container {
      width: calc(100vw - 32px);
      right: -10px;
    }
  }
</style>
</head>
<body>

<!-- Luxury Chat Widget -->
<div class="luxury-chat-widget" id="luxury-widget">
  <!-- Floating Button -->
  <button class="luxury-float-button" id="luxury-toggle" aria-label="Toggle Concierge Chat">
    <svg class="icon chat-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
      <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105"/>
    </svg>
    <svg class="icon close-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
      <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>

  <!-- Chat Container -->
  <div class="luxury-chat-container" id="luxury-chat">
    <!-- Header -->
    <div class="luxury-chat-header">
      <h3>Hi there! How can we help you?</h3>
      <p>
        <span class="status-indicator"></span>
        Available Now
      </p>
    </div>

    <!-- Divider -->
    <div class="luxury-divider"></div>

    <!-- Footer -->
    <div class="luxury-chat-footer">
      <div class="chat-buttons-container">
        <button class="luxury-button whatsapp-button" id="whatsapp-start">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>WhatsApp</span>
        </button>
        
        <a href="#" class="luxury-button messenger-button" id="messenger-btn">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
            <path d="M12 2C6.477 2 2 6.145 2 11.243c0 2.912 1.448 5.51 3.71 7.206V22l3.398-1.87c.907.251 1.87.384 2.892.384 5.523 0 10-4.145 10-9.243S17.523 2 12 2zm.994 12.438l-2.56-2.733-4.996 2.733 5.493-5.828 2.623 2.733 4.933-2.733-5.493 5.828z" fill="#000000"/>
          </svg>
          <span>Messenger</span>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Configuration
  const luxuryConfig = {
    phoneNumber: '+8801783757580',
    message: 'Hello, I would like to inquire about your collection.',
    messengerUrl: 'https://m.me/zairofficial',
  };

  // Elements
  const widget = document.getElementById('luxury-widget');
  const toggleBtn = document.getElementById('luxury-toggle');
  const chatContainer = document.getElementById('luxury-chat');
  const startBtn = document.getElementById('whatsapp-start');
  const messengerBtn = document.getElementById('messenger-btn');

  // Toggle chat container
  toggleBtn.addEventListener('click', function() {
    const isActive = chatContainer.classList.contains('active');
    
    if (isActive) {
      chatContainer.classList.remove('active');
      toggleBtn.classList.remove('active');
    } else {
      chatContainer.classList.add('active');
      toggleBtn.classList.add('active');
    }
  });

  // Start WhatsApp chat
  startBtn.addEventListener('click', function() {
    const phone = luxuryConfig.phoneNumber.replace(/[^0-9]/g, '');
    const message = encodeURIComponent(luxuryConfig.message);
    const url = `https://wa.me/${phone}?text=${message}`;
    
    window.open(url, '_blank', 'noopener,noreferrer');
  });

  // Start Messenger chat
  messengerBtn.addEventListener('click', function(e) {
    e.preventDefault();
    window.open(luxuryConfig.messengerUrl, '_blank', 'noopener,noreferrer');
  });

  // Close on outside click
  document.addEventListener('click', function(event) {
    if (!widget.contains(event.target) && chatContainer.classList.contains('active')) {
      chatContainer.classList.remove('active');
      toggleBtn.classList.remove('active');
    }
  });
</script>

</body>
</html>